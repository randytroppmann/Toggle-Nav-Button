package  {		import flash.display.MovieClip;	import flash.geom.ColorTransform;	import flash.events.MouseEvent;	import flash.events.Event;			public class ToggleNavButton extends MovieClip {		public var overColor:uint = 0x1C9DDA;				public var downColor:uint = 0x97C4E9;				public var outColor:uint = 0x1E4B8A;		public var isSelected:Boolean = false;				public function ToggleNavButton() {			addEventListener(MouseEvent.MOUSE_OVER, onMouseOver, false, 0, true);			addEventListener(MouseEvent.MOUSE_UP, onMouseOver, false, 0, true);			addEventListener(MouseEvent.MOUSE_DOWN, onMouseDown, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, onMouseOut, false, 0, true);			buttonMode = true;		}						protected function onMouseDown(p_evt:MouseEvent):void{			if (enabled){				isSelected = !isSelected;				changeBackColor(downColor);			}		}				protected function onMouseOver(p_evt:MouseEvent):void{			if (enabled){				changeBackColor(isSelected?downColor:overColor);			}					}		protected function onMouseOut(p_evt:MouseEvent):void{			if (enabled){				changeBackColor(isSelected?downColor:outColor);			}		}						public function changeBackColor(p_color:int):void{			var colorTransform:ColorTransform = back.transform.colorTransform;			colorTransform.color = p_color;				back.transform.colorTransform = colorTransform;		}										override public function set enabled(p_bool:Boolean):void{			this.alpha = p_bool?1:.7;			this.mouseEnabled = p_bool;			this.buttonMode = p_bool;			if (!p_bool) changeBackColor(outColor);			super.enabled = p_bool;		}			}	}